{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "QEMU Remote acct_service_main (:1234)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/acct_service_main",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerServerAddress": "127.0.0.1:1234",
            "launchCompleteCommand": "exec-continue",
            "stopAtEntry": true,
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable gdb pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug acct_service_main",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/acct_service_main",
            "args": [
                "--config",
                "${workspaceFolder}/config/default.yaml"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable gdb pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug test_account_service",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test/test_account_service",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable gdb pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
